<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">@color/bg</item>
    </style>

    <style name="shadow">
        <item name="android:elevation">16dp</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">#EEF0F6</item>
    </style>

    <style name="headerIcon" parent="shadow">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/rounded_rect</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="infoText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="mainInfoText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="mainInfoEditText" parent="mainInfoText">
        <item name="android:focusable">false</item>
        <item name="backgroundTint">#aaaaaa</item>
        <item name="android:textColorHint">#aaaaaa</item>
    </style>

    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_hide</item>
    </style>

    <style name="listInfoText" parent="mainInfoText">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
