<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <data>

        <variable
            name="vm"
            type="com.bita.lost.ui.main.SearchViewModel" />

        <import type="android.text.InputType" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/area"
            style="@style/mainInfoEditText"
            android:gravity="center"
            android:hint="서울특별시"
            android:inputType="@{InputType.TYPE_NULL}"
            android:onClick="@{() -> vm.showFragment(vm.areaPickFr)}"
            android:text="@{vm.areaCode.name()}"
            app:layout_constraintBottom_toBottomOf="@id/temp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/temp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temp"
            style="@style/mainInfoText"
            android:layout_marginTop="120dp"
            android:text="에서"
            app:layout_constraintStart_toEndOf="@id/area"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/startDate"
            style="@style/mainInfoEditText"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="2020.01.01"
            android:inputType="@{InputType.TYPE_NULL}"
            android:onClick="@{()->vm.showDatePicker(vm.startDateResult)}"
            android:text="@={vm.startDate}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temp2"
            style="@style/mainInfoText"
            android:text="~"
            app:layout_constraintBottom_toBottomOf="@id/startDate"
            app:layout_constraintStart_toEndOf="@id/startDate"
            app:layout_constraintTop_toTopOf="@id/startDate" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/endDate"
            style="@style/mainInfoEditText"
            android:gravity="center"
            android:hint="2020.02.01"
            android:inputType="@{InputType.TYPE_NULL}"
            android:onClick="@{()->vm.showDatePicker(vm.endDateResult)}"
            android:text="@={vm.endDate}"
            app:layout_constraintBottom_toBottomOf="@id/startDate"
            app:layout_constraintStart_toEndOf="@id/temp2"
            app:layout_constraintTop_toTopOf="@id/startDate" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temp3"
            style="@style/mainInfoText"
            android:text="에"
            app:layout_constraintBottom_toBottomOf="@id/endDate"
            app:layout_constraintStart_toEndOf="@id/endDate"
            app:layout_constraintTop_toTopOf="@id/endDate" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temp4"
            style="@style/mainInfoText"
            android:layout_marginTop="16dp"
            android:text="잃어버린"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startDate" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/product"
            style="@style/mainInfoEditText"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:hint="물건 선택"
            android:inputType="@{InputType.TYPE_NULL}"
            android:onClick="@{() -> vm.showFragment(vm.productPickFr)}"
            android:text="@{vm.productCode.name}"
            app:layout_constraintBottom_toBottomOf="@id/temp4"
            app:layout_constraintStart_toEndOf="@id/temp4"
            app:layout_constraintTop_toTopOf="@id/temp4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temp5"
            style="@style/mainInfoText"
            android:inputType="none"
            android:text="을(를)"
            app:layout_constraintBottom_toBottomOf="@id/product"
            app:layout_constraintStart_toEndOf="@id/product"
            app:layout_constraintTop_toTopOf="@id/product" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temp6"
            style="@style/mainInfoText"
            android:layout_marginTop="16dp"
            android:text="찾고있습니다."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search"
            style="@style/shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_color_rect"
            android:drawableEnd="@drawable/ic_search"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{()->vm.search()}"
            android:padding="8dp"
            android:text="검색"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/temp6"
            tools:ignore="UnusedAttribute" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
